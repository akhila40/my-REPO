pipeline {
    agent any // step-1
    stages {
        stage('Build') {
            steps {
                script {
                    def hostnameOutput = sh(script: 'hostname -I', returnStdout: true).trim()
                    echo "Hostname: ${hostnameOutput}"
                }
            }
        }
        stage('Test') {
            steps {
                script {
                    def freeOutput = sh(script: 'free -gh', returnStdout: true).trim()
                    echo "Memory Info: ${freeOutput}"
                }
            }
        }
        stage('Deploy') {
            steps {
                script {
                    def dfOutput = sh(script: 'df -kh', returnStdout: true).trim()
                    echo "Disk Usage: ${dfOutput}"
                }
            }
        }
    }
}
